<launch>
        <node pkg="ira_laser_tools" name="laserscan_multi_merger" type="laserscan_multi_merger" output="screen">
        	<param name="destination_frame" value="velodyne"/>
		    <param name="cloud_destination_topic" value="/merged_cloud"/>
		    <param name="scan_destination_topic" value="/scan_merged"/>
                <param name="laserscan_topics" value ="/scan /camera_1/scan /camera_2/scan" /> <!-- LIST OF THE LASER SCAN TOPICS TO SUBSCRIBE -->

                <param name="angle_min" value="-3.14159274101"/>
                <param name="angle_max" value="3.14159274101"/>
                <param name="angle_increment" value="0.0087"/>
                <param name="scan_time" value="0.1"/>
                <param name="range_min" value="0.30"/>
                <param name="range_max" value="200.0"/>

	</node>
</launch>
